<!-- editPost.ejs -->

<h1>Edit Post</h1>
<form action="/posts/edit/<%= post.id %>" method="post">
    <input type="text" name="title" placeholder="Title" value="<%= post.title %>" required>
    <input type="text" name="link" placeholder="Link" value="<%= post.link %>">
    <textarea name="description" placeholder="Description"><%= post.description %></textarea>
    <input type="text" name="subgroup" placeholder="Subgroup" value="<%= post.subgroup %>" required>
    <button type="submit">Update Post</button>
</form>
