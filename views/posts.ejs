<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.classless.min.css" />
  <link href="/css/style.css" rel="stylesheet" />
  <title>Homepage</title>
</head>

<body>
  <nav>
    <!-- other navigation links -->
    <a href="/auth/signup">Signup</a>
    <% if (!user) { %>
      <a href="/auth/login">Login</a>
    <% } else { %>
      <a href="/auth/logout">Logout</a>
    <% } %>
  </nav>
  
  <main>
    <div class="authOptions">
      <h1>Homepage</h1>
    </div>
    <h2>Welcome, <%= user?.uname || "Visitor" %></h2>

    <div>
      <p>All Posts</p>
      <% posts.forEach(post => { %>
        <div class="individualPost">
          <a href="/posts/show/<%= post.id %>"><%= post.title %></a>
          <p><%= post.description %></p>

          <!-- Check if logged-in user is the creator of the post -->
          <% if (user && user.id === post.creator) { %>
            <a href="/posts/edit/<%= post.id %>">Edit</a>
          <% } %>

          <!-- Voting Section -->
          <% if (user) { %> <!-- Show voting only if user is logged in -->
            <div class="voting-section">
              <form action="/vote/<%= post.id %>" method="post">
                <button name="vote" value="1" type="submit">Upvote</button>
                <button name="vote" value="-1" type="submit">Downvote</button>
              </form>
            </div>
          <% } %>

          <!-- Add Comment button -->
          <a href="/posts/comment/<%= post.id %>" class="add-comment-button">Add Comment</a>

          <!-- Comments section -->
          <div class="comments-section">
            <h3>Comments</h3>
            <% if (post.detailedComments && post.detailedComments.length > 0) { %>
              <ul>
                <% post.detailedComments.forEach(comment => { %>
                  <li><%= comment.description %></li>
                <% }) %>
              </ul>
            <% } else { %>
              <p>No comments yet.</p>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>

    <% if (user) { %>
      <div>
        <a role="button" href="/posts/create">Create Post</a>
      </div>
    <% } %>

    <div>
      <a href="/subs/list">Subgroups</a>
    </div>
  </main>
</body>
</html>
